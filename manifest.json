{
"name": "Do not translate the code",
"manifest_version": 2,
"version": "1.0",

"description": "Make sure google translator does not translate the code that you are looking at.",
"icons": {
    "128": "images/xignore_128.png"     
},

"permissions": ["activeTab","*://*/*"],

"content_scripts": [{
        "matches": ["*://*/*"],
        "js": ["main.js"]
    }],

"browser_action": {
    "default_icon": {   
        "128": "images/xignore_128.png"                    
      }
}
}
